                                               Foreground="{ThemeResource OverdueColor}"
                                               Visibility="{x:Bind IsVisible, Mode=OneWay}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <FlyoutBase.AttachedFlyout>
